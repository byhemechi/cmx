@import 'nib';
// Example styles (for the placeholder)

html, body
  margin 0

body
  background #fffbd8

article
  width 100%
  max-width 40rem
  margin 0 auto
  color darken(tan, 75%)
  padding 5rem 1rem
  font-family sans-serif

a
  color #34f
  text-decoration none

.group
  display inline-flex
  border-radius 5px
  border solid 1px tan
  overflow hidden
  a
    padding 1rem 1.5rem
    border-radius 5px
    color darken(tan, 75%)
    text-decoration none
    background darken(#fffbd8, 5%)
    &:hover
      background darken(#fffbd8, 10%)
    img
      max-height 2rem
      float left
      margin -0.5rem
    border 0
    border-right solid 1px tan
    border-radius 0
    &:last-child
      border-right 0
